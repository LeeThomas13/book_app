<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./styles/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/layout.css">

</head>
<body>
  <header>
    <div class="topnav">
      <a href="#home" class="active">Best Books!</a>
      <!-- Navigation links (hidden by default) -->
      <div id="myLinks">
        <a href="#news">Books</a>
        
      </div>
      <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
  </header>
  <main>
  <div id="search-results"><h2>Search Results</h2></div>
    <form action="/searches" method="post">
        <input class="bars" type="text" name="search" placeholder="Enter a title or author" required>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="checkbox" name="search" value="title">
          </label>
        </fieldset>
        <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="checkbox" name="search" value="author">
          </label>
        </fieldset>
        <button class="bars" type="submit">Search the Google Books API</button>
      </form>
    </main>
      <footer>
        
      </footer>
      <script >
        // NAVBAR
  function myFunction() {
      var x = document.getElementById("myLinks");
      if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }
      </script>
</body>
</html>